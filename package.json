{
  "name": "compound-engineering-pi",
  "version": "0.1.2",
  "type": "module",
  "private": false,
  "description": "Convert Claude Code Compound Engineering plugins to Pi, Codex, and OpenCode formats.",
  "keywords": [
    "compound-engineering",
    "pi",
    "claude-code",
    "codex",
    "opencode",
    "agent",
    "converter"
  ],
  "bin": {
    "compound-engineering-pi": "./bin/compound-engineering-pi",
    "compound-plugin": "./bin/compound-plugin"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "files": [
    "bin",
    "src",
    "plugins",
    "README.md",
    "LICENSE",
    "docs/pi.md"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "convert": "bun run src/index.ts convert",
    "list": "bun run src/index.ts list",
    "cli:install": "bun run src/index.ts install",
    "test": "bun test",
    "prepublishOnly": "bun test"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "bun-types": "^1.0.0"
  }
}
